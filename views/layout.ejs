<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <!--meta name="viewport" content="width=device-width, initial-scale=1"--><!-- 禁用响应式布局 -->
  <title>Collective-KG | <%= locals.title %></title>
  <!-- CSS -->
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/font-awesome.min.css" rel="stylesheet">
  <link href="/css/kg.css" rel="stylesheet">
  <link href="/css/kg2.css" rel="stylesheet">
  <link href="/css/bootstrap-toggle.min.css" rel="stylesheet">
  <link href="/css/vis.css" rel="stylesheet">
  <link href="/css/jquery.loading.min.css" rel="stylesheet">

  <script src="/javascripts/lib/jquery-1.11.3.min.js"></script>
  <!--[if lt IE 9]><script src="http:html5shim.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
  
</head>
<body>

<!-- 顶部导航条 -->
<nav class="navbar navbar-default navbar-fixed-top stigmod-hide-when-full-screen" role="navigation" id="navbarTop">
  <div class="head container">
    <div class="navbar-header">
      <a class="navbar-brand" href="/"><img src="/images/favicon48.ico" alt="stigmod-logo-sm"/></a>
    </div>
    <div class="collapse navbar-collapse">
      <form class="navbar-form navbar-left" role="search">
        <div class="form-group">
          <input type="text" class="twitter-typeahead form-control" placeholder="Search Collective-KG" id="stigmod-navbar-input">
        </div>
      </form>
      <ul class="nav navbar-nav">
        <!--li><a href="/about">About</a></li-->
        <li><a href="mailto:yijiang.sei@pku.edu.cn">Help</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
          <% if (!locals.user) { %>
        <li><a href="/signup"><span class="glyphicon glyphicon-flash"></span> Sign up</a></li>
        <li><a href="/signin"><span class="glyphicon glyphicon-log-in"></span> &nbsp;Sign in</a></li>
          <% } else { %>
        <li><a href="/user"><span class="glyphicon glyphicon-user"></span> <%= locals.user.mail %></a></li>
        <li><a href="/user/settings/profile"><span class="glyphicon glyphicon-cog"></span> Settings</a></li>
        <li><a href="/signout"><span class="glyphicon glyphicon-log-out"></span> Sign out</a></li>
          <% } %>
      </ul>
    </div>
  </div>
</nav>

<!-- 主容器 -->
<div class="body container">
  <!-- 信息通知栏 -->
  <% if (locals.success) { %>
    <div class="alert alert-success alert-dismissible">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <%= locals.success %>
    </div>
  <% } %>
  <% if (locals.error) { %>
    <div class="alert alert-danger alert-dismissible">
    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <%= locals.error %>
    </div>
  <% } %>
  <!-- 内容 -->
    <%- body %>
  <hr class="stigmod-hr-narrow stigmod-hide-when-full-screen" />
  <footer class="stigmod-hide-when-full-screen">
    <p class="text-center stigmod-gray stigmod-websitefooter">&copy; 2017 Peking University</p>
  </footer>
</div>

</body>
<script language="javascript">
    window.onload = function() {
        if(navigator.appName != "Netscape"||navigator.userAgent.indexOf("Chrome") == -1 ){
            alert("为保证用户体验，请使用最新版本的Chrome浏览器")
            return;
        }
        windowResize();
    }
    window.onresize = function () {
        windowResize();
    }
    function windowResize() {
        var url = window.location.href
        var subUrls = url.split("/");
        if(subUrls[3]=="workspace"){
            var width = $(window).width();
            var height = $(window).height();

          /* css中如此处理
           if(width > 1400){
           $(".head.container").width(width-200);
           $(".body.container").width(width-200);
           }

            if(height>800){ //height没有对窗体的100%
                $(".body .middle-content").height(height-200);
                $(".body .right-content").height(height-200);
                $(".body .right-content").children().height(height-200-1);
            }
           */
            if(width > 1400||height>800) svg.setSize();
        }
    }
</script>
</html>